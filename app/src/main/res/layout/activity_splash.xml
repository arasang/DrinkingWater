<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.john.waveview.WaveView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wave"
        wave:above_wave_color="@android:color/holo_blue_bright"
        wave:blow_wave_color="@android:color/holo_blue_dark"
        wave:progress="50"
        wave:wave_height="large"
        wave:wave_hz="normal"
        wave:wave_length="little"></com.john.waveview.WaveView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back_white_water"
        android:scaleType="fitXY"/>

</RelativeLayout>